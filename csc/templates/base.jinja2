<!DOCTYPE html>
<html lang="en">
<head>
    <title>CSC {{ name }}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="{{ request.static_url('csc:static/csc.css') }}"/>
    <link rel="shortcut icon" href="{{ request.static_url('csc:static/favicon.ico') }}">
    {%- block js %}
        <script src="{{ request.static_url('csc:static/jquery.js') }}"></script>
        <script src="{{ request.static_url('csc:static/csc.js') }}"></script>
    {%- endblock %}
</head>
<body>
{%- block header -%}
    <ul id="top_menu">
        <li><a href="{{ request.route_url('home') }}">UCTechWeb</a></li>
        <li>
            <input id="search_box" name="search_value"
                   value="{{ user.search_box.search_value }}"
                   data-search_url="{{ user.search_box.search_url }}"
                   title='{{ user.search_box.search_title }}'
                   autofocus>
        </li>
        {% if user %}
            <li><a href="{{ request.route_url('user', id=user._id) }}">{{ user.name }}</a></li>
            <li><a href="{{ request.route_url('logout') }}">Logout</a></li>
            {% if 'admin' in user %}
                <li><a href="{{ request.route_url('create_user') }}">Create user</a></li>
            {% endif %}
        {% else %}
            <li><a href="{{ request.route_url('login') }}">Log In</a></li>
        {% endif %}
    </ul>
    <br>
    <hr>
    <div id="search_result">
        <ul></ul>
    </div>
{%- endblock -%}
{%- block content -%}
    Missing "content" block in jinja template!
{%- endblock -%}
</body>
</html>
