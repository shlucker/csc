{% extends "base.jinja2" %}

{% from 'macros.jinja2' import render_field %}

{% block content %}
    <h1>Login</h1>
    <form method=post>
        <dl>
            {{ render_field(form.username) }}
            {{ render_field(form.password) }}
            {{ render_field(form.remember) }}
            <dd><input type=submit value=Login></dd>
        </dl>
    </form>
{% endblock %}
